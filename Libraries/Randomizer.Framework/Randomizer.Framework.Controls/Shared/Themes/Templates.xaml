<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Randomizer.Framework.Controls.Templates">


    <!--List Item Cards Templates-->
    <DataTemplate x:Key="RandomizerListItemCardEvenTemplate">
        <StackLayout>
            <Frame Style="{DynamicResource RandomizerListItemCardEven}">
                <Label VerticalOptions="Center" Text="{Binding Name}" Style="{DynamicResource RandomizerListItemNameLabel}" LineBreakMode="TailTruncation"/>
            </Frame>
        </StackLayout>
    </DataTemplate>

    <DataTemplate x:Key="RandomizerListItemCardOddTemplate">
        <StackLayout>
            <Frame Style="{DynamicResource RandomizerListItemCardOdd}">
                <Label VerticalOptions="Center" Text="{Binding Name}" Style="{DynamicResource RandomizerListItemNameLabel}" LineBreakMode="TailTruncation"/>
            </Frame>
        </StackLayout>
    </DataTemplate>

</ResourceDictionary>